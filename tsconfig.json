{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"lib": ["es2015"],
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		//"noUnusedLocals": true,
		//"noUnusedParameters": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "dist",
	},
	"include": [
		"src/**/*.ts",
		//"test/*.ts"
	],
	"exclude": [
		"node_modules",
		//"dist"
	],
}